<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div role="alert" class="alert alert-error  grid-flow-row">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 shrink-0 stroke-current"
        fill="none"
        viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <p class="bold">Error!</p> <br>
        <ul class="list-disc flex flex-col">
          <% message.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>



  <div class="join">
    <div>
      <div>
        <%= form.text_field :body, placeholder: "Message..", class:"input input-bordered join-item h-full"%>
      </div>
    </div>
    <%= form.submit class:"btn join-item"%>
  </div>



  <div>
    <%= form.label :body, "Write a new message!", style: "display: block" %>
 
  </div>

  <div>
    
  </div>
<% end %>
